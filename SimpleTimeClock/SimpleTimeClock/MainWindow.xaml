<Window x:Name="Main_Window" x:Class="SimpleTimeClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="463">
    <Grid>
        <ListBox x:Name="out_listbox" HorizontalAlignment="Left" Height="250" Margin="13,88,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="out_listbox_SelectionChanged"/>
        <ListBox x:Name="in_listbox" HorizontalAlignment="Left" Height="250" Margin="279,84,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="in_listbox_SelectionChanged"/>
        <Label Content="Out" HorizontalAlignment="Left" Margin="13,57,0,0" VerticalAlignment="Top" Height="26" Width="160" HorizontalContentAlignment="Center"/>
        <Label Content="In" HorizontalAlignment="Left" Margin="279,56,0,0" VerticalAlignment="Top" Height="23" Width="160" HorizontalContentAlignment="Center"/>
        <Button x:Name="clock_in_button" Content="-&gt;" HorizontalAlignment="Left" Margin="188,152,0,0" VerticalAlignment="Top" Width="75" Click="clock_in_button_Click"/>
        <Label Content="Current Time: " HorizontalAlignment="Left" Margin="12,354,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.868,0.462" Height="24" Width="87"/>
        <Label x:Name="current_time_label" Content="12:00:00" HorizontalAlignment="Left" Margin="104,354,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.658,0.423" Width="90"/>
        <Label Content="Current Date:" HorizontalAlignment="Left" Margin="12,383,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.868,0.462" Height="24" Width="87"/>
        <Label x:Name="current_date_label" Content="January, 1st, 2000&#xD;&#xA;" HorizontalAlignment="Left" Margin="104,383,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.658,0.423" Width="115" Height="24"/>
        <Button x:Name="clock_out_button" Content="&lt;-" HorizontalAlignment="Left" Margin="188,258,0,0" VerticalAlignment="Top" Width="75" Click="clock_out_button_Click" />
        <Button x:Name="settings_button" Content="Settings" HorizontalAlignment="Left" Margin="13,6,0,0" VerticalAlignment="Top" Width="62" Height="25" RenderTransformOrigin="0,0.68" Click="settings_button_Click" />
        <Button x:Name="settings_button_Copy" Content="Export" HorizontalAlignment="Left" Margin="80,6,0,0" VerticalAlignment="Top" Width="70" Height="25"/>
        <Label Content="Company Name: " HorizontalAlignment="Left" Margin="167,6,0,0" VerticalAlignment="Top" Width="102" RenderTransformOrigin="2.078,-0.231"/>
        <Label x:Name="company_name_label" Content="&lt;Company Name&gt;" HorizontalAlignment="Left" Margin="269,6,0,0" VerticalAlignment="Top" Width="176"/>

    </Grid>
</Window>
