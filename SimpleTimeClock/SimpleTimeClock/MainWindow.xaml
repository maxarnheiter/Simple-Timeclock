<Window x:Class="SimpleTimeClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="410" Width="640">
    <Grid>
        <ListBox x:Name="outlistbox" HorizontalAlignment="Left" Height="250" Margin="22,45,0,0" VerticalAlignment="Top" Width="160"/>
        <ListBox x:Name="inlistbox" HorizontalAlignment="Left" Height="250" Margin="288,41,0,0" VerticalAlignment="Top" Width="160"/>
        <Label Content="Out" HorizontalAlignment="Left" Margin="22,14,0,0" VerticalAlignment="Top" Height="26" Width="160" HorizontalContentAlignment="Center"/>
        <Label Content="In" HorizontalAlignment="Left" Margin="288,13,0,0" VerticalAlignment="Top" Height="23" Width="160" HorizontalContentAlignment="Center"/>
        <Button x:Name="clock_in_button" Content="&gt;" HorizontalAlignment="Left" Margin="197,141,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Current Time: " HorizontalAlignment="Left" Margin="21,311,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.868,0.462" Height="24" Width="87"/>
        <Label x:Name="current_time_label" Content="12:00:00" HorizontalAlignment="Left" Margin="113,311,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.658,0.423" Width="90"/>
        <Label Content="Current Date:" HorizontalAlignment="Left" Margin="21,340,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.868,0.462" Height="24" Width="87"/>
        <Label x:Name="current_date_label" Content="January, 1st, 2000&#xD;&#xA;" HorizontalAlignment="Left" Margin="113,340,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.658,0.423" Width="115" Height="24"/>
        <Button x:Name="clock_out_button" Content="&lt;" HorizontalAlignment="Left" Margin="197,183,0,0" VerticalAlignment="Top" Width="75" />
        <Button x:Name="settings_button" Content="Settings" HorizontalAlignment="Left" Margin="548,92,0,0" VerticalAlignment="Top" Width="65" Height="55" />
        <Button x:Name="settings_button_Copy" Content="Export" HorizontalAlignment="Left" Margin="548,166,0,0" VerticalAlignment="Top" Width="65" Height="55"/>

    </Grid>
</Window>
