<Window x:Name="pto_prompt_window" x:Class="SimpleTimeClock.PTOPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PTOPromptWindow" Height="188" Width="350">
    <Grid>
        <Button x:Name="submit_button" Content="Submit" HorizontalAlignment="Left" Margin="279,126,0,0" VerticalAlignment="Top" Width="53" Click="submit_button_Click"/>
        <Button x:Name="close_button" Content="Close" HorizontalAlignment="Left" Margin="227,126,0,0" VerticalAlignment="Top" Width="47" RenderTransformOrigin="1.053,0.591" Click="close_button_Click"/>
        <Label Content="Amount of PTO (hours)" HorizontalAlignment="Left" Margin="152,7,0,0" VerticalAlignment="Top" Width="132"/>
        <TextBox x:Name="amount_textbox" HorizontalAlignment="Left" Height="23" Margin="284,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="48"/>
        <TextBox x:Name="description_textbox" HorizontalAlignment="Left" Height="56" Margin="10,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="322"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="76"/>

    </Grid>
</Window>
