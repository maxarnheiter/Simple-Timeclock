<Window x:Name="Password_Window" x:Class="SimpleTimeClock.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PasswordWindow" Height="165" Width="334">
    <Grid>
        <Label Content="Please enter password for user " HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Width="177"/>
        <Button x:Name="cancel_button" Content="Cancel" HorizontalAlignment="Left" Margin="141,91,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-1.28,-0.182" Click="cancel_button_Click"/>
        <Button x:Name="submit_button" Content="Submit" HorizontalAlignment="Left" Margin="230,91,0,0" VerticalAlignment="Top" Width="75" Click="submit_button_Click"/>
        <PasswordBox x:Name="password_box" HorizontalAlignment="Left" Margin="19,52,0,0" VerticalAlignment="Top" Width="286" KeyDown="password_box_KeyDown"/>
        <Label x:Name="user_name_label" Content="&lt;User&gt;" HorizontalAlignment="Left" Margin="192,21,0,0" VerticalAlignment="Top" Width="113" FontWeight="Bold"/>

    </Grid>
</Window>
