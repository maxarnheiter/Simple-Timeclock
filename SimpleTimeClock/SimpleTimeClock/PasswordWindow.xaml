<Window x:Name="Password_Window" x:Class="SimpleTimeClock.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PasswordWindow" Height="184" Width="476">
    <Grid>
        <Label Content="Please enter password for user " HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Width="254" FontSize="18"/>
        <Button x:Name="cancel_button" Content="Cancel" HorizontalAlignment="Left" Margin="290,114,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-1.28,-0.182" Click="cancel_button_Click" FontSize="18"/>
        <Button x:Name="submit_button" Content="Submit" HorizontalAlignment="Left" Margin="379,114,0,0" VerticalAlignment="Top" Width="75" Click="submit_button_Click" FontSize="18"/>
        <PasswordBox x:Name="password_box" HorizontalAlignment="Left" Margin="19,60,0,0" VerticalAlignment="Top" Width="435" KeyDown="password_box_KeyDown" FontSize="18"/>
        <Label x:Name="user_name_label" Content="&lt;User&gt;" HorizontalAlignment="Left" Margin="265,21,0,0" VerticalAlignment="Top" Width="189" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
